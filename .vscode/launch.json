            "program": "${workspaceFolder}/Debug/C/${fileBasenameNoExtension}_debug.run",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
