{
    "tasks": [
        //C
        {
            "type": "shell",
            "label": "C 生成优化程序(.run)",
            "command": "gcc -fdiagnostics-color=always -std=c23 -O2 ${file} -o ${workspaceFolder}/Programs/C/${fileDirname}.run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C 生成优化程序(.exe)",
            "command": "gcc -fdiagnostics-color=always -std=c23 -O2 ${file} -o ${workspaceFolder}\\Programs\\C\\${fileDirname}.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C 生成可调试程序(.run)",
            "command": "gcc -fdiagnostics-color=always -ggdb -std=c23 ${file} -o ${workspaceFolder}/Debug/C/${fileDirname}_debug.run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C 生成可调试程序(.exe)",
            "command": "gcc -fdiagnostics-color=always -ggdb -std=c23 ${file} -o ${workspaceFolder}\\Debug\\C\\${fileDirname}_debug.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        //C++
        {
            "type": "shell",
            "label": "C++ 生成优化程序(.run)",
            "command": "g++ -fdiagnostics-color=always -std=c++23 -O2 ${file} -o ${workspaceFolder}/Programs/C++/${fileDirname}.run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C++ 生成优化程序(.exe)",
            "command": "g++ -fdiagnostics-color=always -std=c++23 -O2 ${file} -o ${workspaceFolder}\\Programs\\C++\\${fileDirname}.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C++ 生成可调试程序(.run)",
            "command": "g++ -fdiagnostics-color=always -ggdb -std=c++23 ${file} -o ${workspaceFolder}/Debug/C++${fileDirname}_debug.run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C++ 生成可调试程序(.exe)",
            "command": "g++ -fdiagnostics-color=always -ggdb -std=c++23 ${file} -o ${workspaceFolder}\\Debug\\C++\\${fileDirname}_debug.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        //运行
        {
            "type": "shell",
            "label": "Python 运行程序",
            "command": "python ${file}",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "Python3 运行程序",
            "command": "python3 ${file}",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C++ 运行优化程序(.run)",
            "command": "${workspaceFolder}/Programs/C++/${fileDirname}.run",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "C++ 运行优化程序(.exe)",
            "command": "${workspaceFolder}\\Programs\\C++\\${fileDirname}.exe",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}