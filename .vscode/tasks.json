        {
            "type": "shell",
            "label": "C 生成优化程序(.run)",
            "command": "gcc -fdiagnostics-color=always -std=c23 -O2 ${file} -o ${fileDirname}/${fileBasenameNoExtension}.run",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
