{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ 生成活动文件(Windows)",
            "command": "E:\\mingw64\\bin\\g++.exe",
            "args": ["g++ -fdiagnostics-color=always ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe -ggdb"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "cppbuild",
            "label": "g++ 生成活动文件(Linux)",
            "command": "/usr/bin/g++",
            "args": ["g++ -fdiagnostics-color=always ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.run -ggdb"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "cppbuild",
            "label": "g++ 生成活动文件(Windows, 优化)",
            "command": "E:\\mingw64\\bin\\g++.exe",
            "args": ["g++ -fdiagnostics-color=always ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe -ggdb -O3"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "cppbuild",
            "label": "g++ 生成活动文件(Linux, 优化)",
            "command": "/usr/bin/g++",
            "args": ["g++ -fdiagnostics-color=always ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.run -ggdb -O3"],
            "options": {
